<h1>Checkout (OrderID:{{OrderID}})</h1>
<h4>Your Total: â‚¬{{total}} EUR</h4>

<div id="charge-error" class="alert alert-danger hidden">
    
</div>

<div class="row">

    <div class="col-md-4 col-md-offset-4">


{{#if messages }}
<p>{{messages}}</p>
{{/if}}

        {{#if hasErrors }}
            <div class="alert alert-danger">
            
            {{# each messages }}
            <p>{{this}}</p>
            {{/each}}

            </div>
        {{/if}}

        <form action="../checkout/create-payment-intent" id="payment-form" method="POST">
         <div>
         <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" class="form-control" >
            </div>
            <div class="form-group">
                <label for="address">Shipping Address</label>
                <input type="text" id="address" class="form-control" >
            </div>

            <div class="form-group">
            <div style="width: 30em" #stripecardelement id="card-element"></div>
            </div>
            </div>
           

      <button id="submit" class="btn btn-success">
        <div class="spinner hidden" id="spinner"></div>
        <span id="button-text">Pay now</span>
      </button>            
                  <p id="card-error" role="alert"></p>
      <p class="result-message hidden">
        Payment succeeded, see the result in your
        <a href="" target="_blank">Stripe dashboard.</a> Refresh the page to pay again.
      </p>
        </form>

    </div>
</div>

<script src="https://js.stripe.com/v3" ></script>
<script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
<script src="../javascripts/FE_checkout.js" ></script>